<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminMenuDrivers"
    android:background="@drawable/gradient_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_layout"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/admin"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold"
                tools:ignore="RelativeOverlap" />

            <LinearLayout
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/borders_icons_menus"
                android:gravity="center">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/admin_icon"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_white_back_icon"
                tools:ignore="ContentDescription" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                tools:ignore="UselessParent">
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/red_point_1_icon"
                    android:background="@drawable/gradient_items_images_menus"
                    android:layout_alignParentStart="true"
                    tools:ignore="ContentDescription"/>
                <Button
                    android:id="@+id/register_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/gradient_buttons"
                    android:text="REGISTRAR"
                    tools:ignore="HardcodedText,TextContrastCheck" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/design_items_layouts">

                <TextView
                    style="@style/TextTheme.AdminMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="30dp"
                    android:text="@string/driver_1"
                    android:textColor="@color/black"
                    tools:ignore="RelativeOverlap" />
                <ImageView
                    android:id="@+id/delete_btn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/delete_black_icon"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/edit_btn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_toStartOf="@id/delete_btn"
                    android:layout_centerVertical="true"
                    android:src="@drawable/edit_black_icon"
                    android:layout_marginEnd="20dp"
                    tools:ignore="ContentDescription" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/design_items_layouts">

                <TextView
                    style="@style/TextTheme.AdminMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="30dp"
                    android:text="@string/driver_2"
                    android:textColor="@color/black"
                    tools:ignore="RelativeOverlap" />
                <ImageView
                    android:id="@+id/delete2_btn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/delete_black_icon"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/edit2_btn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_toStartOf="@id/delete2_btn"
                    android:layout_centerVertical="true"
                    android:src="@drawable/edit_black_icon"
                    android:layout_marginEnd="20dp"
                    tools:ignore="ContentDescription" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/design_items_layouts">

                <TextView
                    style="@style/TextTheme.AdminMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="30dp"
                    android:text="@string/driver_3"
                    android:textColor="@color/black"
                    tools:ignore="RelativeOverlap" />
                <ImageView
                    android:id="@+id/delete3_btn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/delete_black_icon"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/edit3_btn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_toStartOf="@id/delete3_btn"
                    android:layout_centerVertical="true"
                    android:src="@drawable/edit_black_icon"
                    android:layout_marginEnd="20dp"
                    tools:ignore="ContentDescription" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/design_items_layouts">

                <TextView
                    style="@style/TextTheme.AdminMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="30dp"
                    android:text="@string/driver_4"
                    android:textColor="@color/black"
                    tools:ignore="RelativeOverlap" />
                <ImageView
                    android:id="@+id/delete4_btn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/delete_black_icon"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/edit4_btn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_toStartOf="@id/delete4_btn"
                    android:layout_centerVertical="true"
                    android:src="@drawable/edit_black_icon"
                    android:layout_marginEnd="20dp"
                    tools:ignore="ContentDescription" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>