<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_layout"
    android:contentDescription="@string/buscaruta"
    android:textAlignment="center"
    tools:context=".UserMain">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <android.support.v7.widget.CardView
                    android:layout_width="315dp"
                    android:layout_height="60dp"
                    android:layout_marginVertical="12dp"
                    android:layout_marginStart="10dp"
                    android:backgroundTint="#FFFFFF"
                    app:cardCornerRadius="19sp">

                    <EditText
                        android:id="@+id/et_search"
                        android:layout_width="290dp"
                        android:layout_height="48dp"
                        android:layout_marginVertical="7dp"
                        android:layout_marginStart="21dp"
                        android:layout_marginTop="18dp"
                        android:layout_marginEnd="14dp"
                        android:background="@color/white"
                        android:ems="10"
                        android:hint="@string/buscaruta"
                        android:importantForAutofill="no"
                        android:inputType="textPersonName"
                        android:textColor="@color/black"
                        android:textColorHint="#78909C"
                        android:textSize="20sp"
                        tools:ignore="DuplicateSpeakableTextCheck" />
                </android.support.v7.widget.CardView>

                <ImageButton
                    android:id="@+id/ib_search"
                    android:layout_width="60dp"
                    android:layout_height="49dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="26dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/gradient_items_images_menus"
                    android:contentDescription="@string/buscaruta"
                    android:onClick="busqueda"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/search"
                    tools:ignore="DuplicateSpeakableTextCheck" />

            </TableRow>

        </LinearLayout>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_mapa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_items_menu"
                android:contentDescription="@string/mapa_de_ciudad_valles"
                app:srcCompat="@drawable/mapa_mainview_user"
                tools:ignore="ImageContrastCheck" />
        </TableRow>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>